---
const { content, content2, title } = Astro.props;
---

<div class="block">
	<div class="header-content">
		<div class="header-title"><h3>{title}</h3></div>
		<div class="header-body">
			<p>
				{content}
			</p>
			<p>
				{content2}
			</p>
		</div>
	</div>
</div>

<style>
	.header-content {
		width: 100%;
		margin: 4rem 0;
		flex: 1 1 auto;
	}

	.header-title h3 {
		font-size: 5rem;
	}

	.header-body {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
	}
	.header-body p {
		margin: 2rem 0;
		padding-right: 8rem;
	}

	@media screen and (width < 640px) {
		.header-content {
			width: 100%;
			margin: 2rem auto;
			flex-grow: 1;
			padding: 0 0;
		}

		.header-title {
			font-size: 3rem;
			text-align: center;
		}

		.header-body {
			margin-top: 2rem;
			text-align: center;
			display: block;
			columns: 1;
		}

		.header-image {
			padding-left: 0 !important;
			padding-right: 0 !important;
		}

		.header-image img {
			width: 100%; /* you can use % */
			height: auto;
			object-fit: fill;
		}
	}

	@media (640px <= width <= 1024px) {
		.header-content {
			width: 100%;
			margin: 2rem auto;
			flex-grow: 1;
			padding: 0 4rem;
		}

		.header-title {
			font-size: 4.25rem;
			margin-top: 2rem;
			margin-bottom: 2rem;
		}

		.header-body {
			margin-top: 4rem;
			margin-bottom: 6rem;
		}
	}
</style>
