<style>

	 /* ****************** */
	/* Features Threee */
	.features-three-block {
		margin: 8rem 16rem;
	}

	.features-three-heading h3 {
		width: 100%;
		font-size: 4.5rem;
		margin: 3rem auto;
		text-align: center;
		justify-content: center;
	}

	.features-three-subheading {
		margin: 2rem 16rem;
		text-align: center;
	}
	.feature-grid {
		margin: 8rem auto;
		columns: 3;
	}

	.feature-item {
		margin: 0 4rem;
	}

	.feature-icon {
		margin: auto;
		margin-right: 2rem;
		vertical-align: middle;
	}

	.feature-item h4 {
		margin: auto;
		font-size: 2.25rem;
		font-weight: 500;
	}

	.feature-item p {
		margin: 2rem auto;
	}

	.feature-cta-btn {
		color: #3883c1;
	}
	.feature-cta-btn:hover {
		color: #a9a9a9;
	}

	@media (640px <= width <= 1024px) {
		.features-three-block {
			margin: 6rem auto;
			padding: 0 8rem;
		}

		.features-three-subheading {
			margin: 2rem 4rem;
		}

		.feature-grid {
			margin: 8rem auto;
			columns: 1;
		}

		.feature-item {
			margin-bottom: 8rem;
		}
	}

	@media screen and (width < 640px) {
		.features-three-block {
			margin: 6rem auto;
			padding: 0 4rem;
		}

		.features-three-heading h3 {
			padding: 0 0rem;
			text-align: left;
		}

		.features-three-subheading {
			margin: 2rem 0rem;
			text-align: left;
		}

		.feature-grid {
			margin: 8rem auto;
			columns: 1;
		}

		.feature-item {
			margin: 0;
			margin-bottom: 8rem;
		}
	}
</style>
