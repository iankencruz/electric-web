---
const {imgPos, imgsrc, content, content2, title} = Astro.props

let pos = imgPos

if (imgPos === "left"){
    pos = "order: -9999; padding-right: 8rem;"
} else  {
    pos = "order: 9999; padding-left: 8rem;"
}
---

<div class="block flex ">
	<div class="header-content w-full my-4 flex-auto">
		<div class="header-title"><h3>{title}</h3></div>
		<div class="header-body">
			<p>
				{content}
			</p>
			{
				content2 &&
				(
					<p>{content2}</p>
				)
			}
		</div>
	</div>
	<div class="header-image  basis-3/5" style=`${pos}`>
		<img src={imgsrc} alt="img" width="300" height="500" />
	</div>
</div>

<style>

	.header-image {
        flex-basis: 60%;
		margin-top: auto;
		margin-bottom: auto;
	}

	.header-image img {
		width: 100%; /* you can use % */
		height: auto;
		object-fit: fill;
        margin: auto;
		border-radius: 0.8rem;
		
	}

	.header-content {
		width: 100%;
		margin: 4rem 0;
        flex: 1 1 auto
	}

	.header-title h3 {
		font-size: 5rem;
	}

	.header-body p {
		margin: 4rem auto;
	}

	@media screen and (width < 640px) {
		.header-content {
			width: 100%;
			margin: 2rem auto;
			flex-grow: 1;
			padding: 0 0;
            
		}

		.header-title {
			font-size: 3rem;
		}

		.header-body {
			margin: 4rem auto;
		}

		.header-image {
			padding-left: 0 !important;
			padding-right: 0 !important;
		}

        .header-image img {
			width: 100%; /* you can use % */
			height: auto;
			object-fit: fill;
		}
	}

	@media (640px <= width <= 1024px) {
		.header-content {
			width: 100%;
			margin: 2rem auto;
			flex-grow: 1;
			padding: 0 4rem;
            
		}

		.header-title {
			font-size: 4.25rem;
			margin-top: 2rem;
			margin-bottom: 2rem;
		}

		.header-body {
			margin-top: 4rem;
			margin-bottom: 6rem;
		}

		.header-image {
			padding-left: 0 !important;
			padding-right: 0 !important;
		}		

		.header-image img {
			width: 100%; /* you can use % */
			height: auto;
			object-fit: fill;
            padding: 0 4rem;
			
		}
	}
</style>
