<style>
	/* ******************** */
	/* ******** Foooter **** */
	.footer-main {
		display: grid;
		grid-template-columns: repeat(4, minmax(0, 1fr));
		background-color: rgb(249, 249, 249);
		height: auto;
		margin: 0 auto;
		padding: 8rem 16rem;
	}

	.footer-logo {
		font-size: 4rem;
		padding-bottom: 4rem;
	}

	.footer-business-details {
		padding: 4rem 0rem;
	}
	.footer-business-details p {
		padding: 1rem 0rem;
	}

	.footer-contact {
		grid-column-start: 2;
		grid-column-end: 3;
		text-align: left;
		margin: 0;
		padding: 0 8rem;
	}

	.footer-contact p {
		margin: 4rem 0;
	}

	.footer-nav {
		text-align: left;
		margin: 0;
		padding: 0 8rem;
	}

	.footer-nav li {
		margin: 4rem 0rem;
	}

	.footer-secondary {
		display: flex;
		height: 8rem;
		background-color: rgb(215, 215, 215);
		margin: auto;
	}

	.footer-secondary p {
		margin: auto;
		text-align: center;
		align-items: center;
	}

	.social-links {
		margin: 0rem auto;
		grid-auto-flow: column dense;
	}
	.social-links li {
		padding-bottom: 4rem;
	}



	@media screen and (width < 1080px) {
		.footer-main {
			display: block;
			columns: 1;
			text-align: center;
			margin: 0;
			padding: 4rem 4rem;
		}

		.footer-description {
			margin: 0 8rem;

    }
		.footer-contact {
			text-align: center;
			margin: 0;
			padding: 0 4rem;
		}

		.footer-nav {
			text-align: center;
			margin: 0;
			padding: 0 4rem;
		}
	}



  @media screen and (width < 640px) {
    .footer-description {
			margin: 0 4rem;

    }
  }
</style>
