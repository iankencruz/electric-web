---
const { blocktype, imgsrc, imgsrc2 } = Astro.props;

let type = blocktype;
---

<div class="image-block block">
	{blocktype === "banner" && <img src={imgsrc} alt="vehicle" />}

	{
		blocktype === "dual" && (
			<div class="grid">
				<img src={imgsrc} alt="sadf" />
				<img src={imgsrc2} alt="adorable dog" />
			</div>
		)
	}
</div>

<!-- Have to make the multi image layout seperate -->

<style>
	/* ********************* */
	/* ******Image Block**** */
	.image-block img {
		width: 100%;
		height: 36rem;
		object-fit: cover;
		border-radius: 0.8rem;
		margin: 0;
	}

	.columns-2 {
		columns: 2;
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		column-gap: 1rem;
	}

	@media (640px <= width <= 1024px) {
		.image-block img {
			padding: 0 rem;
		}
	}

	@media (width > 1500px) {
		.image-block img {
			background-color: red;
		}
	}
</style>
