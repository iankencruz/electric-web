---
const { blocktype } = Astro.props;

let type = blocktype;
---

{
  blocktype === "banner" && (
    <div class="image-block block">
      <img src="https://picsum.photos/id/655/600/400" alt="vehicle">
    </div>
  )
}
{
  blocktype === "dual" && (
    <div class="block image-block">
      <div class="grid">
        <img src="https://picsum.photos/id/1020/600/400" alt="sadf" />
        <img src="https://picsum.photos/id/1025/600/400" alt="adorable dog">
      </div>
    </div>
  )
}


<!-- Have to make the multi image layout seperate -->


<style>
  .image-block img {
    width: 100%;
    height: 36rem;
    object-fit: cover;
    border-radius: 0.8rem;
    margin: 0;
  }



  .columns-2 {
    columns: 2;
  }

  .grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    column-gap: 1rem;
  }
</style>
